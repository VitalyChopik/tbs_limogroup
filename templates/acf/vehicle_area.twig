<section class="vehicle-columns">
    <div class="container">
        <div class="justify-content-center row">
            <header class="title col-12">
                {{ fields.title }}
            </header>

            {% for vehicle in fields.vehicles %}
                <div class="col-lg-3 col-md-6">

                    {% set container_tag = 'div' %}
                    {% set container_href = '' %}
                    {% if vehicle.url is not empty %}
                        {% set container_tag = 'a' %}
                        {% set container_href = 'href="' ~ vehicle.url ~ '"' %}
                    {% endif %}

                    <{{ container_tag }} {{ container_href }} class="car">
                        <div class="img-container">
                            {{ fn('wp_get_attachment_image', vehicle.image.id, 'large') }}
                        </div>
                        <p class="class h3">{{ vehicle.class }}</p>
                        <div class="desc">{{ vehicle.desc }}</div>
                    </{{ container_tag }}>

                </div>
            {% endfor %}

            <div class="button-container col-12">
                <a href="{{ fields.url }}" class="frame-button--green">{{ fields.button_text }}</a>
            </div>
        </div>
    </div>
</section>