<section class="city-cards">
    <div class="container">
        <div class="justify-content-center row">

            <header class="title col-12">
                {{ fields.title }}
            </header>

            

                {% for card in fields.cards %}

                    <div class="col-lg-4 col-md-6 col-sm-10 col-12">

                        <div class="city-card">
                            
                                <a href="{{ card.url }}" class="img-container">
                                    {{ fn('wp_get_attachment_image', card.image.id, 'large') }}
                                </a>

                                <div class="city-button-container">
                                    <a href="{{ card.url }}" class="frame-button--yellow">{{ card.button }}</a>
                                </div>
                           
                        </div>
                    </div>

                {% endfor %}

        
        </div>
    </div>
</section>