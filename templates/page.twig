{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			{% for item in post.meta('flexible_content') %}
				{{ include('acf/' ~ item.acf_fc_layout ~ '.twig', { fields: item }) }}
			{% endfor %}
		</article>
	</div>
{% endblock %}